#!/bin/bash
#переходим в папку где нужно создавать файлы
cd /home/test
for ((i=1; i<=10; i++))
do
#записываем время в переменную
time=`date "+%H%M%S"`
#создаем файл наполняя его 1000 случайных символов
dd if=/dev/random of=test_${time}_${i}.txt count=1000
done

#чтобы запускать скрипт по расписанию на сервере следуетдобавить запись в планировщик cron
#для запуска каждые 6 часов следует добавить */6 в поле часов
#* */6 * * * /way/to/script
